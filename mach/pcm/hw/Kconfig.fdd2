config PCM_HAVE_FDC_DRV2
	bool
	default y	if PCM_FDC_DRV2 > 0 \
			&& PCM_FDC_DRV2 < 6
	default n

config PCM_FDC_DRV2
	int
	range 0 6	if PCM_FDC_DRVMAX >= 4
	default 0	if PCM_FDC_DRV2_NONE
	default 1	if PCM_FDC_DRV2_MFS12
	default 2	if PCM_FDC_DRV2_IBMXT
	default 3	if PCM_FDC_DRV2_MFS14
	default 4	if PCM_FDC_DRV2_MFS16
	default 5	if PCM_FDC_DRV2_IBMAT
	default 6

choice
	default PCM_FDC_DRV2_MFS14
	prompt "Drive 2 Type "
	---help---
		Select the FDC connected physical type of disk drive 2.

config PCM_FDC_DRV2_NONE
	bool
	prompt "none"
	---help---
		No floppy disk drive connected.

config PCM_FDC_DRV2_MFS12
	bool
	depends on PCM_FDC_ORIG_8272_MFM250
	prompt "MFS 1.2"
	---help---
		MFS 1.2 aka K5600.10 floppy disk drive by
		VEB Buchungsmaschinenwerk Karl-Marx-Stadt:

		  - 5.25 inch disk drive
		  - 300 rotation per minute (RPM)
		  - 125 or 250 kBit/s transfere rate
		  - FM or MFM operation (SD/DD)
		  - 48 tracks per inch (TPI)
		  - 40 tracks per side
		  - single side
		  - max. 200 kB

		This drive is compatible to the original TEAC floppy disk
		drive FD-55A:

		  - max. 6.25 kB per track
		  - max. 250 kB per disk

config PCM_FDC_DRV2_IBMXT
	bool
	depends on PCM_FDC_ORIG_8272_MFM250
	prompt "IBM XT"
	---help---
		IBM XT floppy disk drive:

		  - 5.25 inch disk drive
		  - 300 rotation per minute (RPM)
		  - 125 or 250 kBit/s transfere rate
		  - FM or MFM operation (SD/DD)
		  - 48 tracks per inch (TPI)
		  - 40 tracks per side
		  - double side
		  - max. 400 kB

		This drive is compatible to the original TEAC floppy disk
		drive FD-55B:

		  - max. 6.25 kB per track
		  - max. 500 kB per disk

config PCM_FDC_DRV2_MFS14
